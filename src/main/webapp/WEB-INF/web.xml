<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <servlet>
        <servlet-name>employeeServlet</servlet-name>
        <servlet-class>revature.servlets.EmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>employeeServlet</servlet-name>
        <url-pattern>/employees</url-pattern> <!--have to include project name before url pattern e.g:-->
                                             <!--http://localhost:8080/Project_1_Servlet_war/employees-->
    </servlet-mapping>

    <servlet>
        <servlet-name>managerServlet</servlet-name>
        <servlet-class>revature.servlets.ManagerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>managerServlet</servlet-name>
        <url-pattern>/managers</url-pattern> <!--have to include project name before url pattern e.g:-->
                                            <!--http://localhost:8080/Project_1_Servlet_war/managers-->
    </servlet-mapping>

</web-app>